<h1 class="text-center my-3">Set up a new password</h1>
<div class="container">
  <%if(error){%>
  <div class="alert alert-warning" role="alert"><%=error%></div>
  <%}%> <%if(verifiedToken){%>
  <section id="update" class="mx-4">
    <form
      method="POST"
      enctype="application/x-www-form-urlencoded"
      action="/user/set-password/<%=verifiedToken%>"
    >
      <div class="mb-3">
        <label for="password" class="form-label">New Password</label>
        <input
          type="password"
          name="password"
          class="form-control"
          id="password"
          required
        />
      </div>
      <div class="mb-3">
        <label for="confirmPassword" class="form-label"
          >Confirm New Password</label
        >
        <input
          type="password"
          name="confirmPassword"
          class="form-control"
          id="confirmPassword"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary">Reset Password</button>
    </form>
  </section>
  <%}%>
</div>
